# Copy this file to .env.local and fill in your Firebase project credentials.
# You can find these in your Firebase project settings under "General".

# Firebase Client SDK (for browser)
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"

# Telegram Bot
# You get this from BotFather on Telegram.
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME="YOUR_BOT_USERNAME"
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"

# Google Drive API
# See the integration guide in the admin panel for how to get these.
# This should be the full JSON content, ideally in a single line.
DRIVE_SERVICE_ACCOUNT_JSON='{"type": "service_account", ...}'
DRIVE_PARENT_FOLDER_ID="YOUR_GOOGLE_DRIVE_FOLDER_ID"

# Genkit/Gemini AI
# Get this from Google AI Studio.
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"
